<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageTest"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserIDLabel"
        android:text="UserId:"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/imageTest"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtUserId"
        android:text="1"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@+id/txtUserIDLabel"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtUserIDLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtId"
        android:text="2"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtUserIDLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtIdLabel"
        android:text="ID:"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtUserIDLabel"
        app:layout_constraintRight_toLeftOf="@+id/txtId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitleLabel"
        android:text="Title: "
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUserIDLabel"
        app:layout_constraintLeft_toLeftOf="@+id/txtUserIDLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTitle"
        android:text="My title."
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtTitleLabel"
        app:layout_constraintLeft_toRightOf="@+id/txtTitleLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBodyTitle"
        android:text="Body: "
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleLabel"
        app:layout_constraintLeft_toLeftOf="@+id/txtTitleLabel"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtBody"
        android:text="My Body"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:padding="5dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtBodyTitle"
        app:layout_constraintLeft_toRightOf="@+id/txtBodyTitle"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>